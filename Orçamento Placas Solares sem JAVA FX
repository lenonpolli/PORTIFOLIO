import java.math.BigDecimal;
import java.math.RoundingMode;
import java.util.Scanner;

public class App {
    public static void main(String[] args) throws Exception {
        int soma = 0;
        double media = 0;
        double consumoDia = 0;
        double potenciaSistema = 0;
        int potenciaPainel;
        double calculaPainel;
        double geracaoMedia = 0;
        double valorGeracaoMedia = 0;
        double valorGeracaoMediaMensal = 0;
        double valorGeracaoMedia25anos = 0;

        Scanner sc = new Scanner(System.in);
        for (int i = 1; i <= 12; i++) {
            int consumoMes;

            System.out.println("Digite o CONSUMO EM KWH DO MÊS " + i);
            consumoMes = sc.nextInt();

            soma += consumoMes;
            media = soma / 12;
            consumoDia = media / 30.4;
            potenciaSistema = consumoDia / (0.76) / 4.78 * 1000;
            geracaoMedia = potenciaSistema * (110.43712) / 1000;
            valorGeracaoMedia = geracaoMedia * 0.89;
            valorGeracaoMediaMensal = geracaoMedia * 0.89 * 12;
            valorGeracaoMedia25anos = geracaoMedia * 0.89 * 300;

        }

        BigDecimal bd = new BigDecimal(consumoDia).setScale(2, RoundingMode.HALF_EVEN);
        BigDecimal bdc = new BigDecimal(potenciaSistema).setScale(2, RoundingMode.HALF_EVEN);
        BigDecimal gm = new BigDecimal(geracaoMedia).setScale(2, RoundingMode.HALF_EVEN);
        BigDecimal vgm = new BigDecimal(valorGeracaoMedia).setScale(2, RoundingMode.HALF_EVEN);
        BigDecimal vgmm = new BigDecimal(valorGeracaoMediaMensal).setScale(2, RoundingMode.HALF_EVEN);
        BigDecimal vgmanos = new BigDecimal(valorGeracaoMedia25anos).setScale(2, RoundingMode.HALF_EVEN);

        System.out.println("A soma do consumo é : " + soma + " kW/anual");
        System.out.println("A media do consumo é : " + media + " kWh/mes");
        System.out.println("Consumo médio diário é : " + bd.doubleValue() + " kWh/mes");
        System.out.println("Potência do sistema : " + bdc.doubleValue() + " kWp");
        System.out.println("A geração média do sistema é: " + gm.doubleValue() + " kWh/mes");
        System.out.println("O valoor em R$ da geração mensal é: " + vgm.doubleValue());
        System.out.println("O valor em R$ da geracão media anual é: " + vgmm.doubleValue());
        System.out.println("O valor em R$ da geracão media em 25 anos é: " + vgmanos.doubleValue());

        System.out.println("Digite a potência do PAINEL SOLAR");
        potenciaPainel = sc.nextInt();

        calculaPainel = potenciaSistema / potenciaPainel;
        BigDecimal bdca = new BigDecimal(calculaPainel).setScale(2, RoundingMode.HALF_EVEN);

        System.out.println("Você escolheu painéis de " + potenciaPainel);
        System.out.println("A quantidade de painéis " + potenciaPainel + " é " + bdca.doubleValue());

        sc.close();

    }

}
